echo "Bạn đã nhập năm $1"
#read $1
can=`expr $1 % 10`
case $can in
0)a=“canh ”;;
1)a=“Tân”;;
2)a="Nhâm";;
3)a="Quý";;
4)a="Giáp";;
5)a="Ất";;
6)a="Bính";;
7)a="Đinh";;
8)a="Mậu";;
9)a=”Kỷ”;;
esac
chi=`expr $1 % 12`
case $chi in
0)b="Thân";;
1)b="Dậu";;
2)b="Tuất";;
3)b="Hợi";;
4)b="Tí";;
5)b="Sửu";;
6)b="Dần";;
7)b="Mão";;
8)b="Thìn";;
9)b="Tỵ";;
10)b="Ngọ";;
11)b="Mùi";;
esac
echo "Năm nay là năm $a $b "





